.container-fluid
  .row
    .col-sm-3.col-md-2.sidebar
      %form#filters
        - @filters.each do |filter_hash|
          = render partial: 'multiselect', locals: filter_hash
        .submit-group
          %button.btn.btn-default#update-grid-button{type: 'button'} Update
    .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
      %h1.page-header Variants

      .table-responsive
        %table.display.table.table-striped.table-bordered{ id: 'variants', data: { source: variants_url(format: 'json') }}
          %thead
            %tr
              %th CHR
              %th Start
              %th Stop
              %th Reference
              %th Variant
              %th Gene
              %th Amino Acid
              %th Mutation Type
              %th Diseases
              %th Sources
            %tbody
