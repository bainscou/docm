.container-fluid
  .page-background
    .row
      .col-sm-3.sidebar
        %form#filters
          - @multiselect_filters.each do |filter_hash|
            = render partial: 'multiselect', locals: filter_hash
          - @range_filters.each do |filter_hash|
            = render partial: 'range', locals: filter_hash
          .submit-group
            %button.btn.btn-default.btn-xs#update-grid-button{type: 'button'}
              %span.glyphicon.glyphicon-refresh
              Update
            %a#tsv-export-button.btn.btn-default.btn-xs{href: '#'}
              %span.glyphicon.glyphicon-download-alt
              TSV
            %a#vcf-export-button.btn.btn-default.btn-xs{href: '#'}
              %span.glyphicon.glyphicon-download-alt
              VCF

      .col-sm-9.main
        %h1.page-header Variants

        .table-responsive
          %table.display.table.table-striped.table-bordered{ id: 'variants', data: { source: variants_url(format: 'json') }}
            %thead
              %tr
                %th HGVS
                %th CHR
                %th{'data-hide' => 'xs,sm,md', 'data-class' => 'expand'} Start
                %th{'data-hide' => 'xs,sm,md', 'data-class' => 'expand'} Stop
                %th{'data-hide' => 'xs,sm,md', 'data-class' => 'expand'} Reference
                %th{'data-hide' => 'always', 'data-class' => 'expand'} Variant
                %th Gene
                %th{'data-hide' => 'always', 'data-class' => 'expand'} Amino Acid
                %th Mutation Type
                %th Diseases
                %th{'data-hide' => 'always', 'data-class' => 'expand'} Sources
            %tbody
        %a{href: '/variant_submission'} Are we missing a variant? Please submit it!